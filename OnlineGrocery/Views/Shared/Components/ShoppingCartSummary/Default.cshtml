@model CartViewModel


@if (Model.ShoppingCart.ShoppingCartItems.Count > 0)
{
    <li>
        <a asp-controller="Cart" asp-action="CartDisplay">
            <span id="cart-status">
                <i class="fas fa-cart-arrow-down"></i> @Model.ShoppingCart.ShoppingCartItems.Count
            </span>
        </a>
    </li>
}