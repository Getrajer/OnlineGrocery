@model IEnumerable<ProductModel> 

<head>
    <link rel="stylesheet" href="~/css/main_admin_style.css"/>
    <link rel="stylesheet" href="~/css/admin_display_products_style.css"/>
</head>

<section class="admin_site">
    <div class="admin_site_container">

        <div class="admin_navigation">
            <div class="admin_navigation_container">
                <div class="admin_profile">

                    <div class="profile_img">
                        <div class="profile_img_container">
                            <img src="~/other_images/user.svg" alt="user_profile_img" />
                        </div>
                    </div>

                    <div class="profile_description">
                        <p>Mateusz Owczarek</p>
                        <p>Role: Store Owner</p>
                    </div>
                </div>

                <div class="controll_list">
                    <div class="controll_name">
                        <p>Main</p>
                    </div>

                    <ul>
                        <li>
                            <a class="link" asp-controller="Admin" asp-action="MainAdminPage"><i class="fas fa-home"></i> Main Page</a>
                        </li>
                    </ul>
                </div>

                <div class="controll_list">
                    <div class="controll_name">
                        <p>Product</p>
                    </div>

                    <ul>
                        <li>
                            <a class="link" asp-controller="Product" asp-action="CreateProduct"><i class="fas fa-plus-circle"></i> Create Product</a>
                        </li>

                        <li class="on_site">
                            <a asp-controller="Product" asp-action="ProductsListAdmin" class="link"><i class="fas fa-list"></i> Display Products</a>
                        </li>
                    </ul>
                </div>


                <div class="controll_list">
                    <div class="controll_name">
                        <p>Users</p>
                    </div>

                    <ul>
                        <li>
                            <a asp-controller="Users" asp-action="UsersListAdmin" class="link"><i class="fas fa-users"></i> Display users</a>
                        </li>

                        <li>
                            <a class="link"><i class="fas fa-user-friends"></i> Open statistics</a>
                        </li>
                    </ul>
                </div>


                <div class="controll_list">
                    <div class="controll_name">
                        <p>Sales</p>
                    </div>

                    <ul>
                        <li>
                            <a class="link"><i class="fas fa-user-circle"></i> User Orders</a>
                        </li>

                        <li>
                            <a class="link"><i class="fas fa-money-bill-wave"></i> Statistics</a>
                        </li>

                        <li>
                            <a class="link"><i class="fas fa-database"></i> Product Statistics</a>
                        </li>
                    </ul>
                </div>

                <div class="controll_list">
                    <div class="controll_name">
                        <p>CMS</p>
                    </div>

                    <ul>
                        <li>
                            <a class="link"><i class="fas fa-edit"></i> Edit Main Page</a>
                        </li>

                        <li>
                            <a class="link"><i class="fas fa-edit"></i> Edit Products Page</a>
                        </li>
                    </ul>
                </div>

                <div class="controll_list">
                    <div class="controll_name">
                        <p>Stock</p>
                    </div>

                    <ul>
                        <li>
                            <a class="link"><i class="fas fa-truck"></i> Order Products</a>
                        </li>

                        <li>
                            <a class="link"><i class="fas fa-history"></i> Orders History</a>
                        </li>
                    </ul>
                </div>

                <div class="controll_list">
                    <div class="controll_name">
                        <p>Organiser</p>
                    </div>

                    <ul>
                        <li>
                            <a class="link"><i class="fas fa-comments"></i> Team Chat</a>
                        </li>

                        <li>
                            <a class="link"><i class="fas fa-clipboard"></i> Notes</a>
                        </li>

                        <li>
                            <a class="link"><i class="fas fa-inbox"></i> Message Board</a>
                        </li>
                    </ul>
                </div>

            </div>
        </div>

        <div class="admin_content_page">
            <div class="table_page">
                <div class="table_page_container">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Name</th>
                                <th scope="col">Type</th>
                                <th scope="col">Price (£)</th>
                                <th scope="col">Quantity</th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var p in Model)
                            {
                                <tr>
                                    <td>@p.Id</td>
                                    <td>@p.Name</td>
                                    <td>@p.Type</td>
                                    <td>@p.Price</td>
                                    <td>@p.Quantity</td>
                                    <td>
                                        <a asp-controller="Product" asp-action="EditProduct" asp-route-id="@p.Id">Edit</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</section>