@model IEnumerable<ProductModel>

<head>
    <link rel="stylesheet" href="~/css/display_products_style.css" />
</head>

<section class="products">
    <div class="products_container">

        <div class="title">
            <div class="left_tile">

            </div>
            <div class="right_title">
                <h1>All Products</h1>
            </div>
        </div>



        <div class="products_display">
            <div class="products_menu">
                <ul>
                    <li>
                        <button>All Products</button>
                    </li>
                    <li>
                        <button><i class="fas fa-carrot"></i> Vegetables</button>
                    </li>
                    <li>
                        <button><i class="fas fa-apple-alt"></i> Fruits</button>
                    </li>
                    <li>
                        <button><i class="fas fa-drumstick-bite"></i> Meats</button>
                    </li>
                    <li>
                        <button><i class="fas fa-fish"></i> Fish</button>
                    </li>
                    <li>
                        <button><i class="fas fa-wine-bottle"></i> Drinks</button>
                    </li>
                    <li>
                        <button><i class="fas fa-blender"></i> Creams</button>
                    </li>
                    <li>
                        <button><i class="fab fa-nutritionix"></i> Dates, Nuts</button>
                    </li>
                    <li>
                        <button><i class="fas fa-bread-slice"></i> Bakeary</button>
                    </li>
                    <li>
                        <button><i class="fas fa-baby"></i> Baby</button>
                    </li>
                </ul>
            </div>

            <div class="products_list">

                <div class="left_button">
                    <!--
                    <div class="left_button_container">
                        <p>&lt;</p>
                    </div>
                    -->


                </div>
                <div class="l_container">


                    <div class="products_list_container">

                        @foreach (var p in Model)
                        {
                            <div class="product">
                                <div class="product_container">
                                    <div class="img_container">
                                        <img src="~/images/@p.ImgPath" alt="@p.Name" />
                                    </div>

                                    <div class="name">
                                        <h3>@p.Name (@p.Price£)</h3>
                                    </div>

                                    <div class="add_to_chart">
                                        <div class="input">
                                            <label>Quantity</label>
                                            <input placeholder="1" />
                                        </div>

                                        <div class="add_button">
                                            <button>Add</button>
                                        </div>
                                    </div>
                                    <div class="details">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="EditProduct" asp-route-id="@p.Id">Edit</a>
                                    </div>
                                </div>
                            </div>
                        }




                    </div>

                </div>

                <div class="right_button">
                    <div class="left_button_container">
                        <p>&gt;</p>
                    </div>
                </div>

            </div>
        </div>

    </div>
</section>