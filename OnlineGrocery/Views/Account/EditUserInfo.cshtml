@model EditUserInfoViewModel

@{
    ViewBag.Title = $"{Model.FirstName} Edit Page";
}


<head>
    <link href="~/css/form_style.css" rel="stylesheet" />
</head>

<section class="form_page">
    <div class="form_page_container">

        <div class="title">
            <h1>Edit your infromation @Model.FirstName</h1>
        </div>
        <form method="post">
            <input hidden asp-for="Id" />


            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form_box">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form_box">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form_box">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form_box">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="two_boxes">
                <div class="form_box">
                    <label asp-for="StreetName"></label>
                    <input asp-for="StreetName" class="form-control" />
                    <span asp-validation-for="StreetName" class="text-danger"></span>
                </div>
                <div class="form_box">
                    <label asp-for="StreetNumber"></label>
                    <input asp-for="StreetNumber" class="form-control" />
                    <span asp-validation-for="StreetNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="two_boxes">
                <div class="form_box">
                    <label asp-for="City"></label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form_box">
                    <label asp-for="PostCode"></label>
                    <input asp-for="PostCode" class="form-control" />
                    <span asp-validation-for="PostCode" class="text-danger"></span>
                </div>
            </div>
            <div class="button_box">
                <button type="submit">Edit Info</button>
            </div>
        </form>


        <div class="button_box">
            <form method="post" asp-action="DeleteUserAccount" asp-controller="AccountController" asp-route-Id="@Model.Id">
                <button onclick="return confirm('Are you sure you want to delete user: @Model.FirstName')" type="submit">Delete Account</button>
            </form>
        </div>
    </div>
</section>