@model IEnumerable<ProductModel>

@{
    ViewBag.Title = "Online Grocary";
}

<head>
    <link rel="stylesheet" href="~/css/index_cover.css" />
</head>

<header>
    <div class="header_container">

        <div class="left_side">

            <div class="text_content">
                <h1>Online <br /> Grocery</h1>
                <p>Welcome to our online grocery. Get the best quality products delivered to your door. We get our products from local farmers and producers. Try our offer and become member of our family.</p>

                <div class="thematic_images">
                    <div class="icon">
                        <i class="fas fa-seedling"></i>
                        <p>Organic</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-apple-alt"></i>
                        <p>Fresh</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-hamburger"></i>
                        <p>Your creation</p>
                    </div>
                </div>
            </div>

        </div>


        <div class="right_side">

            <button>Explore <i class="fas fa-arrow-right"></i></button>

        </div>

    </div>
</header>

<section class="products">
    <div class="products_container">

        <div class="title">
            <div class="left_tile">

            </div>
            <div class="right_title">
                <h1>All Products</h1>
            </div>
        </div>

       

        <div class="products_display">
            <div class="products_menu">
                <ul>
                    <li>
                        <button>All Products</button>
                    </li>
                    <li>
                        <button>Vegetables</button>
                    </li>
                    <li>
                        <button>Fruits</button>
                    </li>
                    <li>
                        <button>Meats</button>
                    </li>
                    <li>
                        <button>Fish</button>
                    </li>
                    <li>
                        <button>Drinks</button>
                    </li>
                    <li>
                        <button>Creams</button>
                    </li>
                    <li>
                        <button>Dates, Nuts</button>
                    </li>
                    <li>
                        <button>Bakeary</button>
                    </li>
                    <li>
                        <button>Baby</button>
                    </li>
                </ul>
            </div>

            <div class="products_list">

                <div class="left_button">
                    <!--
                    <div class="left_button_container">
                        <p>&lt;</p>
                    </div>
                    -->


                </div>
                <div class="products_list_container">

                    @foreach (var p in Model)
                    {
                        <div class="product">
                            <div class="product_container">
                                <div class="img_container">
                                    <img src="~/images/@p.ImgPath" alt="@p.Name" />
                                </div>

                                <div class="name">
                                    <h3>@p.Name (@p.Price£)</h3>
                                </div>

                                <div class="add_to_chart">
                                    <div class="input">
                                        <label>Quantity</label>
                                        <input placeholder="1" />
                                    </div>

                                    <div class="add_button">
                                        <button>Add</button>
                                    </div>
                                </div>

                                <div class="details">
                                    <a>See details</a>
                                </div>
                            </div>
                        </div>
                    }




                </div>

                <div class="right_button">
                    <div class="left_button_container">
                        <p>&gt;</p>
                    </div>
                </div>

            </div>
        </div>

    </div>
</section>
