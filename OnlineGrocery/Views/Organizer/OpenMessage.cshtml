@model OpenMessageViewModel

<head>
    <link rel="stylesheet" href="~/css/main_admin_style.css" />
</head>

@{
    ViewBag.Title = "Team Chat";
    //Change style for link with this ID
    AdminNavViewModel m = new AdminNavViewModel();
    m.LinkId = 17;
}


<section class="admin_site">
    <div class="admin_site_container">

        <partial name="_AdminNavigationPartial" model="m" />

        <div class="admin_content_page">
            <div class="admin_main_panel">

                <section class="message">
                    <div class="message_container">

                        <div class="author">
                            <p>Message from: @Model.Message.Email</p>
                            <p>Name: @Model.Message.Name</p>
                        </div>

                        <div class="message_title">
                            <h2>@Model.Message.Topic</h2>
                        </div>

                        <div class="message_body">
                            <p>@Model.Message.Message</p>
                        </div>

                    </div>
                </section>


                <section class="manage_message">
                    <div>
                        <div class="title">
                            <h3>If you resolved issue mark it</h3>
                        </div>

                        <form method="post">

                            <input asp-for="@Model.IsResolved" class="form-check-input" />
                            <label class="form-check-label" asp-for="@Model.IsResolved">
                                Is Resolved
                            </label>


                            <input hidden asp-for="Id" />
                            <button type="submit">Submit Changes</button>
                        </form>

                    </div>
                </section>

            </div>
        </div>
    </div>
</section>